<% layout('layouts/boilerplate') -%>

<head>
	<link rel='stylesheet' href='/stylesheets/profile.css' />	
</head>


<img src="<%= currentUser.image.secure_url %>" alt="<%= currentUser.username %>'s profile image" class="profile-image">
<div class="col-md-6">
	<h5>Добро пожаловать, <strong><%= currentUser.username %> </strong> вы находитесь на странице своего профиля.</h5>
	<h4>Список избранных объектов:</h4>
	
	<% currentUser.favoriteLinks.forEach(function(favoriteLink){ %>
		<a href="/projects/<%= favoriteLink.id %>"><%= favoriteLink.url %> </a>
	<% }); %>
	
</div>

<div class="col-md-6"">
	


	<% if (currentUser && currentUser.username === 'admin') { %>
				<a href="/projects/new" class="addNew">Добавить объект</a>
				<a href="/articles/new" class="addNew">Добавить новость</a>
				<a href="/guides/new" class="addNew">Добавить гид по городам</a>
	<% } %>
</div>





<form action="/profile?_method=PUT" method="POST" enctype="multipart/form-data" class="col-md-6"">
	<p>Изменить данные профиля:</p>
	<div>
		<label for="username">Username:</label>
		<input type="text" id="username" name="username" placeholder="username" value="<%= currentUser.username %>" autofocus required>
	</div>
	<div>
		<label for="current-password">Текущий пароль: (обязателен для обновления профиля):</label>
		<input type="password" id="current-password" name="currentPassword" placeholder="current password" required>
	</div>
	<div>
		<label for="new-password">Новый пароль:</label>
		<input type="password" id="new-password" name="newPassword" placeholder="new password">
	</div>
	<div>
		<label for="password-confirmation">Подтверждение пароля:</label>
		<input type="password" id="password-confirmation" name="passwordConfirmation" placeholder="password confirmation">
	</div>
	<div id="validation-message"></div>
	<div>
		<label for="email">Электронный адрес:</label>
		<input type="text" id="email" name="email" placeholder="email" value="<%= currentUser.email %>">
	</div>
	<div>
		<label for="image">Фото профиля:</label>
		<small>(this deletes existing)</small>
		<input type="file" id="image" name="image">
	</div>

	<input type="submit" id="update-profile"> 
</form>




<script src="/javascripts/profile.js"></script>

