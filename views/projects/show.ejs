<h1><%= project.title %></h1>
<div>Price from: <%= project.price %></div>
<p><%= project.description %></p>
<h5><%= project.location %></h5>
<div class="centered-div">
    <% project.images.forEach(function(image) { %>
        <img src="<%= image.url %>" alt="Elapce objects" style="width:315px; margin:10px">   
    <% }) %>
</div>
<div>
     <a href="/projects/<%= project.id %>/edit">
        <button>Edit</button>
    </a> 
</div>
<div>
    <form action="/projects/<%= project.id %>?_method=DELETE" method="POST">
        <input type="submit" value="Delete">
    </form>
</div>



<style>
 .centered-div {
     margin: 0 auto;
     width:90%;
     display: flex;
     flex-wrap: wrap;
 }
</style>