<% layout('layouts/boilerplate') -%>

<head>
	<!-- UIkit CSS -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/uikit@3.3.0/dist/css/uikit.min.css" />

	<!-- UIkit JS -->
	<script src="https://cdn.jsdelivr.net/npm/uikit@3.3.0/dist/js/uikit.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/uikit@3.3.0/dist/js/uikit-icons.min.js"></script>
   	
</head>

<div class="uk-container uk-container-expand">
	<form action="/articles" method="POST" enctype="multipart/form-data" class="ml-3">
		<h1>Добавить новую</h1>
		<div>
			<div>
				<p class="uk-text-bolder uk-margin-top">Название статьи:</p>
				<input class="uk-input uk-width-1-3" type="text" name="article[title]" placeholder="Название">
			</div>	
		</div>
		
		
		<div>
			<div>
				<p class="uk-text-bolder uk-margin-top">Текст статьи:</p>
				<textarea class="uk-textarea uk-width-1-3" name="article[body]" placeholder="Текст статьи"  rows="20"></textarea>
			</div>
			
		</div>
		<div>
			<div>
				
				<p class="uk-text-bolder uk-margin-top" for="inputGroupFile01">Фотографии к статье:</p>
				<div class="uk-margin">
					<div uk-form-custom>
						<input type="file" accept="images/*" name="images" id="inputGroupFile01" multiple>
						<button class="uk-button uk-button-default" type="button" tabindex="-1">Загрузить</button>
					</div>
				</div>	
			</div>	
			<!-- <input name="file1" type="file" accept="application/pdf"> */ -->
			
		</div>
		
		<div>
			<div>
				<p>Автор статьи:</p>
				<input class="uk-input uk-width-1-3" type="text" name="article[author]" placeholder="Название">
			</div>	
		</div>
		
		<div>
			<div>
				<p class="uk-text-bolder uk-margin-top">Категория:</p>
					<input type="radio" class="uk-radio" id="residence" name="article[category]" value="ВНЖ" >
					<label for="residence">ВНЖ</label>
					<input type="radio" class="uk-radio" id="invest" name="article[category]" value="Инвестиции">
					<label for="invest">Инвестиции</label>
					<input type="radio" class="uk-radio" id="taxes" name="article[category]" value="Налоги">
					<label for="taxes">Налоги</label>
					<input type="radio" class="uk-radio" id="buying" name="article[category]" value="Покупка и оформление">
					<label for="buying">Покупка и оформление</label>
					<input type="radio" class="uk-radio" id="markets" name="article[category]" value="Рынки и цены">
					<label for="markets">Рынки и цены</label>
			</div>	
		</div>
		<div>
			<div>
				<p class="uk-text-bolder uk-margin-top">Вступление - первые две строки:</p>
				<input class="uk-input uk-width-1-3" type="text" name="article[introduction]">
			</div>	
		</div>
	
		<div>
			<div>
				<p class="uk-text-bolder uk-margin-top">Заключение, после второго фото:</p>
				<input class="uk-input uk-width-1-3" type="text" name="article[conclusions]" >
			</div>
			<input type="submit" class="uk-button uk-button-secondary uk-margin">	
		</div>
	
	</form>
</div>
