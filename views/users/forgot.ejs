<% layout('layouts/boilerplate') -%>

<h1>Забыли пароль?</h1>


<div class="col-md-6 login-form-2">
	<form action="/forgot-password?_method=PUT" method="POST">
		<div class="form-group">
			<label for="email" class="labelText">Электронный адрес:</label>
			<input type="text" class="form-control" id="email" name="email" placeholder="Электронный адрес" autofocus required>
		</div>
		<input type="submit" class="btnSubmit" value="Сбросить пароль">
	</form>
</div>