<% layout('layouts/boilerplate') -%>

<h1>Сбросить пароль</h1>


<div class="col-md-6 login-form-2">
	<form action="/reset/<%= token %>?_method=PUT" method="POST">
		<div class="form-group">
			<label for="password" class="labelText">Новый пароль:</label>
			<input type="password" class="form-control" id="password" name="password" placeholder="Новый пароль" autofocus >
        </div>
        <div class="form-group">
			<label for="email" class="labelText">Подтверждение пароля:</label>
			<input type="password" class="form-control" id="confitm" name="confirm" placeholder="Подтверждение пароля" autofocus >
		</div>
		<input type="submit" class="btnSubmit" value="Обновить пароль">
	</form>
</div>


