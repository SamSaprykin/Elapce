<% layout('layouts/boilerplate') -%>




<form action="/guides" method="POST" enctype="multipart/form-data" class="ml-3">
	<h1>Добавить новый гид</h1>
	<div class="form-row">
		<div class="form-group col-md-6">
			<p>Название района или города:</p>
			<input type="text" name="title" placeholder="Название" class="form-control">
		</div>	
	</div>
	
	<div class="form-row">
		<div class="form-group col-md-6">
			<p>Название района или города:</p>
			<input type="text" name="location" placeholder="Местоположение" class="form-control">
		</div>	
	</div>
	<div class="form-row">
		<div class="form-group col-md-6">
			<p>Текст гида:</p>
			<textarea name="body" placeholder="Текст гида"  class="form-control col-md-12" rows="20"></textarea>
		</div>
		
	</div>
	<div class="form-row "></div>
		<div class="custom-file col-md-6 mb-3">
			
			<label class="custom-file-label" for="inputGroupFile01">Фотографии к гиду:</label>
			<input type="file" accept="images/*" name="images" id="inputGroupFile01" class="custom-file-input" multiple  />	
		</div>	
		<!-- <input name="file1" type="file" accept="application/pdf"> */ -->
		
    </div>
    
    <div class="form-row">
		<div class="form-group col-md-3">
			<p>Данные для диаграмы:</p>
			<input type="text" name="data" placeholder="Данные" class="form-control">
			<input type="text" name="data" placeholder="Данные" class="form-control">
			<input type="text" name="data" placeholder="Данные" class="form-control">
			<input type="text" name="data" placeholder="Данные" class="form-control">
			<input type="text" name="data" placeholder="Данные" class="form-control">
			<input type="text" name="data" placeholder="Данные" class="form-control">
		</div>
		<div class="form-group col-md-3">
			<p>Подпись для диаграмы:</p>
			<input type="text" name="labels" placeholder="Подпись к данным" class="form-control">
			<input type="text" name="labels" placeholder="Подпись к данным" class="form-control">
			<input type="text" name="labels" placeholder="Подпись к данным" class="form-control">
			<input type="text" name="labels" placeholder="Подпись к данным" class="form-control">
			<input type="text" name="labels" placeholder="Подпись к данным" class="form-control">
			<input type="text" name="labels" placeholder="Подпись к данным" class="form-control">
		</div>		
    </div>
    
	<div class="form-row">
		<div class="form-group col-md-6">
			<p>Вступление - первые две строки:</p>
			<input type="text" name="introduction" class="form-control">
		</div>	
	</div>


	<div class="form-row">
		<div class="form-group col-md-6">
			<p>Заключение, после второго фото:</p>
			<input type="text" name="conclusions" class="form-control" >
		</div>	
	</div>

	
	
	<div class="form-row">
		<div class="form-group col-md-6">
			<input type="submit">
		</div>
	</div>
</form>